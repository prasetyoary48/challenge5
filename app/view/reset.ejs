<h2>Masukkan Email anda</h2>
<form action="/resetpassword" method="post">
    <% if(messages.error){ %>
        <span style="color:red">
            <% messages.error %>
        </span>
    <% } %>
    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
    </div>
    <div>
        <input type="submit" value="Forget">
    </div>
</form>